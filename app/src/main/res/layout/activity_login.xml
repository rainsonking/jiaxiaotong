<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_logo_bg"
        android:layout_marginTop="60dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="80dp"
            android:src="@mipmap/img_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/login"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/text_size_15"
            >

            <LinearLayout
                android:id="@+id/llayout_userName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_phone_no"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/text_size_15"
                    android:src="@mipmap/img_phone_no" />

                <EditText
                    android:id="@+id/ed_userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="4"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#b2b2b2"
                    android:textSize="18sp"></EditText>

                <ImageView
                    android:id="@+id/iv_phone_clear"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/img_clear"
                    android:layout_marginRight="@dimen/text_size_12"
                    android:visibility="invisible"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e7e7e7"
                />

            <LinearLayout
                android:id="@+id/llayout_pwd"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/text_size_15"
                    android:src="@mipmap/img_password" />

                <EditText
                    android:id="@+id/ed_passWord"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="4"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#b2b2b2"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_password_clear"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/img_clear"
                    android:layout_marginRight="@dimen/text_size_12"
                    android:visibility="invisible"
                    />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="记住密码"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:textColor="#b2b2b2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_box"
            >

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="登录"
                android:textSize="20sp"
                android:visibility="gone"
                android:background="@drawable/selector_login_btn"
                android:onClick="click"
                android:textColor="#ffffff" />

            <LinearLayout
                android:id="@+id/layout_enabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:visibility="visible"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:text="登录"
                    android:textSize="20sp"
                    android:background="@drawable/btn_login_unenable"
                    android:onClick="click"
                    android:enabled="false"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="©百利天下:版权所有"
            android:textSize="@dimen/text_size_12"
            android:textColor="#858585" />
    </LinearLayout>


</RelativeLayout>