<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/text_size_10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/text_size_10"
            android:background="#ffffff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上次作业是否提交"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_last_is_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:textSize="@dimen/text_size_18"
                android:textColor="#858585"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/score_19"
            android:layout_marginLeft="@dimen/text_size_10"
            android:layout_marginRight="@dimen/text_size_10"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/text_size_10"
            android:orientation="horizontal"
            android:background="#ffffff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业完成率"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/work_finish_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_18"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/score_19"
            android:layout_marginLeft="@dimen/text_size_10"
            android:layout_marginRight="@dimen/text_size_10"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/text_size_10"
            android:orientation="horizontal"
            android:background="#ffffff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业成绩"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/work_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_18"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/text_size_10"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/text_size_10"
        >
        <ImageView
            android:id="@+id/iv_book"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/stage_curriculum_task"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布置作业"
            android:textSize="@dimen/text_size_20"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/text_size_8"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/score_19"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_size_10"
        android:orientation="horizontal"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划完成时间:"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_18"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_plan_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-03-16"
            android:textColor="#333333"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/text_size_18"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_size_10"
        android:orientation="horizontal"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划批改时间:"
            android:textColor="#333333"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_plan_pigai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-03-16"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_18"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_size_10"
        android:orientation="horizontal"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作业备注:"
            android:textColor="#333333"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_home_work_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#333333"
            android:text="背单词"
            android:textSize="@dimen/text_size_18"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

</LinearLayout>