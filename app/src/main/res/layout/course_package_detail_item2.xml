<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginTop="5dp"
    >

    <RelativeLayout
        android:id="@+id/layout_expansion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_selector"
        >

        <ImageView
            android:id="@+id/tv_no"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/arrow_right"
            android:textSize="@dimen/text_size_15"
            android:text="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_15"
            />

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9-10/46"
            android:textColor="@color/score_12"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/tv_no"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_10"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-05-19"
            android:textColor="@color/score_night"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_size_15"
            />
    </RelativeLayout>

    <com.example.bailyhome.view.ScoreMyGridView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:layout_marginLeft="@dimen/text_size_10"
        android:layout_marginRight="@dimen/text_size_10"
        >
    </com.example.bailyhome.view.ScoreMyGridView>

</LinearLayout>