<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_selector_score"
    android:orientation="vertical"
    android:paddingLeft="29dp"
    android:paddingRight="29dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingTop="3dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/score_time_axis" />

            <View
                android:id="@+id/view_2"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="@drawable/score_listitem_bg_01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/class_date_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/class_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-03-16"
                    android:textColor="@color/score_13"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/score_listitem_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/class_hour_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/class_hour_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="课时"
                        android:textColor="@color/score_night"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/class_hour"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="9-10"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/test_result_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="14dp">

                    <TextView
                        android:id="@+id/test_result_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="作业成绩"
                        android:textColor="@color/score_night"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/test_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/score_14"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="分"
                        android:textColor="@color/score_night"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看成绩详情"
                        android:textColor="@color/score_15"
                        android:textSize="@dimen/text_size_12" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="7dp"
                        android:src="@mipmap/score_time_right" />
                </LinearLayout>
            </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="15dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:background="#A6A6A6"
        android:visibility="gone" />

    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:background="#A6A6A6"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="-25dp"

        android:padding="10dp">


    </RelativeLayout>

</RelativeLayout>