<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal"
    android:orientation="vertical">

    <include layout="@layout/activity_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/text_size_10"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:id="@+id/iv_book"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/stage_curriculum"
                />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GMAT一对一"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_18"
                android:layout_marginLeft="@dimen/text_size_10"
                android:layout_toRightOf="@+id/iv_book"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老师:"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_18"
                android:layout_toLeftOf="@+id/tv_teacher"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王小花"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_18"
                android:layout_marginLeft="@dimen/text_size_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/score_19"
            android:layout_marginTop="5dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/text_size_10"
            >

            <TextView
                android:id="@+id/tv_order_date_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约日期"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_18"
                />

            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-08-20"
                android:layout_toRightOf="@+id/tv_order_date_left"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_18"
                android:layout_marginLeft="@dimen/text_size_10"
                />



            <TextView
                android:id="@+id/tv_stage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基础阶段"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_18"
                android:layout_marginLeft="@dimen/text_size_10"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/text_size_10"
            >

            <TextView
                android:id="@+id/tv_class_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课时间"
                android:textColor="#484848"
                android:textSize="@dimen/text_size_18"
                />

            <TextView
                android:id="@+id/tv_class_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00-12:00"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_18"
                android:layout_toRightOf="@+id/tv_class_d"
                android:layout_marginLeft="@dimen/text_size_10"
                />

            <TextView
                android:id="@+id/tv_peixun_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已培训"
                android:textSize="@dimen/text_size_18"
                android:layout_marginLeft="@dimen/text_size_10"
                android:layout_alignParentRight="true"
                android:textColor="#fcac54"
                android:layout_marginRight="@dimen/text_size_10"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/text_size_10"
            >
            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课时"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_18"
                />

            <TextView
                android:id="@+id/tv_order_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#333333"
                android:layout_toRightOf="@+id/tv_hour"
                android:textSize="@dimen/text_size_18"
                android:layout_marginLeft="@dimen/text_size_10"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/text_size_10"
            >

            <TextView
                android:id="@+id/tv_xiaoqu_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="校区"
                android:textColor="#484848"
                android:textSize="@dimen/text_size_18"
                />

            <TextView
                android:id="@+id/tv_xiaoqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中关村校区"
                android:textColor="#333333"
                android:layout_toRightOf="@+id/tv_xiaoqu_left"
                android:textSize="@dimen/text_size_18"
                android:layout_marginLeft="@dimen/text_size_10"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        >

        <RelativeLayout
            android:id="@+id/layout_course_first_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/text_size_10"
            android:paddingBottom="@dimen/text_size_10"
            >

            <ImageView
                android:id="@+id/iv_first_test"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/img_first_test"
                android:layout_marginLeft="@dimen/text_size_10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课首测试"
                android:textColor="#333333"
                android:layout_toRightOf="@+id/iv_first_test"
                android:textSize="@dimen/text_size_18"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_course_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未测试"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/text_size_10"
                />

            <ImageView
                android:id="@+id/iv_next_page1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/text_size_10"
                android:visibility="gone"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/score_19"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/text_size_10"
            android:layout_marginRight="@dimen/text_size_10"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <RelativeLayout
                android:id="@+id/layout_home_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_size_8"
                android:paddingBottom="@dimen/text_size_8"
                android:background="#ffffff"
                android:layout_toLeftOf="@+id/iv_next_page2"
                >

                <ImageView
                    android:id="@+id/iv_home_work"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/img_class_homework"
                    android:layout_marginLeft="@dimen/text_size_10"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="随堂作业"
                    android:textColor="#333333"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_home_work"
                    android:textSize="@dimen/text_size_18"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_home_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未布置"
                    android:textColor="#858585"
                    android:textSize="@dimen/text_size_18"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_next_page2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:src="@mipmap/img_next_page"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/text_size_10"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/score_19"
            android:layout_marginLeft="@dimen/text_size_10"
            android:layout_marginRight="@dimen/text_size_10"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layout_course_pingjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_size_10"
                android:paddingBottom="@dimen/text_size_10"
                android:background="#ffffff"
                android:layout_toLeftOf="@+id/iv_next_page3"
                >

                <ImageView
                    android:id="@+id/iv_course_pingjia"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/img_course_pingjia"
                    android:layout_marginLeft="@dimen/text_size_10"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程评价"
                    android:textColor="#333333"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_course_pingjia"
                    android:textSize="@dimen/text_size_18"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_course_pingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未评价"
                    android:textColor="#858585"
                    android:textSize="@dimen/text_size_18"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_next_page3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/img_next_page"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/text_size_10"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>