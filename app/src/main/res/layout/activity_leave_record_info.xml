<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/score_18"
    android:orientation="vertical">

    <include layout="@layout/activity_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/stage_curriculum" />

                        <TextView
                            android:id="@+id/tv_className"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="托福一对一"
                            android:textColor="@color/score_12"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="老师:"
                        android:textColor="@color/score_night"
                        android:textSize="@dimen/text_size_15" />


                    <TextView
                        android:id="@+id/tv_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="王小华"
                        android:textColor="@color/score_night"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/score_19" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预约日期"
                                android:textColor="@color/score_12"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/tv_appoit_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:text="2016-16-06"
                                android:textColor="@color/score_12"
                                android:textSize="@dimen/text_size_15" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_class_time_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                               android:text="上课时间"
                                android:textColor="@color/score_12"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/tv_class_time"
                                android:layout_marginLeft="11dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_class_time_left"
                                android:text="10:00-12:00"
                                android:textColor="@color/score_12"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/tv_attend_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/score_15"
                                android:text="审批中"
                                android:layout_alignParentRight="true"
                                android:textSize="@dimen/text_size_14" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预约学时"
                                android:textColor="@color/score_12"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/tv_appoit_hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:text="2"
                                android:textColor="@color/score_12"
                                android:textSize="@dimen/text_size_15" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingBottom="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                               android:text="校区"
                                android:textColor="@color/score_12"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/tv_school"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:text="中关村校区"
                                android:textColor="@color/score_12"
                                android:textSize="@dimen/text_size_15" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_weight="1"
                    android:text="请假类型"
                    android:textColor="@color/score_12"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_leave_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="学员原因"
                    android:textColor="@color/score_night"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="请假原因"
                    android:textColor="@color/score_12"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:layout_marginBottom="@dimen/text_size_10"
                    android:textSize="@dimen/text_size_15" />

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:layout_marginLeft="@dimen/text_size_17"-->
                    <!--android:background="@color/score_18" />-->

                <TextView
                    android:id="@+id/tv_leave_cause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="有事有事有事"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/score_night"
                    android:layout_marginRight="@dimen/text_size_17"
                    android:layout_marginBottom="@dimen/text_size_10"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/score_12"
                    android:layout_marginBottom="@dimen/text_size_10"
                    android:text="请假备注"
                    android:textSize="@dimen/text_size_15" />

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:layout_marginLeft="@dimen/text_size_17"-->
                    <!--android:background="@color/score_18" />-->

                <TextView
                    android:id="@+id/tv_leave_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="17dp"
                    android:textColor="@color/score_night"
                    android:text="ddddddddddddddddddddddddddddddddd"
                    android:layout_marginBottom="@dimen/text_size_10"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>