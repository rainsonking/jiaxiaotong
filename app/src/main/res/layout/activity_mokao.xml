<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/score_18"
    android:orientation="vertical">

    <include layout="@layout/activity_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="@dimen/text_size_15"
            android:paddingRight="@dimen/text_size_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/stage_curriculum" />

                <TextView
                    android:id="@+id/tv_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="GMAT一对一"
                    android:textColor="@color/score_12"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_kaoti_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高级精简版"
                android:textColor="@color/score_night"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/score_19" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_size_15"
            android:paddingRight="@dimen/text_size_15"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="11dp"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="模考日期"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/tv_mokao_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_11"
                        android:text="2016-03-05"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/tv_mokao_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_11"
                        android:text="10:00"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/tv_mokao_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_11"
                        android:text="12:00"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="模考机器"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/tv_jiqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_15"
                        android:text="08:00-10:00"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="校区"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/tv_xiaoqu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_15"
                        android:text="中关村校区"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_mokao_state"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mokao_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已预约"
                    android:textColor="@color/score_23"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_teach_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_size_10"
        android:background="#ffffff"
        android:visibility="invisible"
        android:paddingBottom="@dimen/text_size_10"
        android:paddingTop="@dimen/text_size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_10"
            android:text="教学日志"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_size_10"
            android:src="@mipmap/img_next_page" />
    </RelativeLayout>

</LinearLayout>