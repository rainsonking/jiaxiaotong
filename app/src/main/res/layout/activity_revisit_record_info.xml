<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/score_18"
    android:orientation="vertical">

    <include layout="@layout/activity_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_className"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="托福一对一"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/tv_revisit_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-01-16"
                        android:textColor="@color/score_night"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/score_19" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp">


                    <LinearLayout
                        android:id="@+id/ll_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="@dimen/text_size_12"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="回访对象"
                            android:textColor="@color/score_12"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/tv_revisit_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:text="家长"
                            android:textColor="@color/score_12"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_01"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="回访教师"
                            android:textColor="@color/score_12"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/tv_revisit_teacher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:text="王小华"
                            android:textColor="@color/score_12"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_ifsatisfy"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="21dp"
                        android:layout_marginTop="12dp"
                        android:src="@mipmap/parent_dissatisfied" />

                    <TextView
                        android:id="@+id/tv_revisit_result_unsatify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ll_02"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="14dp"
                        android:text="不满意"
                        android:visibility="gone"
                        android:textColor="@color/score_15"
                        android:textSize="@dimen/text_size_14" />
                    <TextView
                        android:id="@+id/tv_revisit_result_satify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ll_02"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="满意"
                        android:textColor="@color/score_25"
                        android:textSize="@dimen/text_size_14" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="回访记录"
                    android:textColor="@color/score_12"
                    android:textSize="@dimen/text_size_15" />

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:layout_marginLeft="11dp"-->
                    <!--android:background="@color/score_18" />-->
                <!--&lt;!&ndash;<ScrollView&ndash;&gt;-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="100dp"-->
                <!--android:background="@color/white"-->
                <!--android:scrollbars="vertical">-->

                <TextView
                    android:id="@+id/tv_revisit_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="回访记录回访记录回访记录回访记录回ddddddddddddddddddddddddd访记录回访记录回访记录"
                    android:textColor="@color/score_night"
                    android:textSize="@dimen/text_size_15" />
                <!--</ScrollView>-->
                <LinearLayout
                    android:id="@+id/layout_gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/activity_bg" />

                    <TextView
                        android:id="@+id/tv_solution_view"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:text="解决方案"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />

                    <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:layout_marginLeft="11dp"-->
                        <!--android:background="@color/score_18" />-->
                    <!--&lt;!&ndash;<ScrollView&ndash;&gt;-->
                    <!--android:id="@+id/scrollView01"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="100dp"-->
                    <!--android:background="@color/white"-->
                    <!--android:scrollbars="vertical">-->

                    <TextView
                        android:id="@+id/tv_solution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:scrollbars="vertical"
                        android:text="回访记录回访记录回访记录回访记录回访记录回访记录回访记录"
                        android:textColor="@color/score_night"
                        android:textSize="@dimen/text_size_15" />
                    <!--</ScrollView>-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/activity_bg" />

                    <TextView
                        android:id="@+id/tv_follow_up_view"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:text="跟踪回访"
                        android:textColor="@color/score_12"
                        android:textSize="@dimen/text_size_15" />

                    <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:layout_marginLeft="11dp"-->
                        <!--android:background="@color/score_18" />-->
                    <!--<ScrollView-->
                    <!--android:id="@+id/scrollView02"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="100dp"-->
                    <!--android:background="@color/white"-->
                    <!--android:scrollbars="vertical">-->

                    <TextView
                        android:id="@+id/tv_follow_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:scrollbars="vertical"
                        android:text="回访记录回访记录回访记录回访记录回访记录回访记录回访记录"
                        android:textColor="@color/score_night"
                        android:textSize="@dimen/text_size_15" />
                    <!--</ScrollView>-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>